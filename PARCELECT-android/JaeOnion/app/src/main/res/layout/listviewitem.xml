<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/menu_background">

        <ImageView
            android:id="@+id/brand"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:src="@drawable/mypage_faq" />

        <ImageView
            android:id="@+id/product"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:src="@drawable/mypage_qna"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:layout_below="@+id/brand"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/productContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="productContents"
            android:textSize="11dp"
            android:layout_toRightOf="@+id/product"
            android:layout_above="@+id/originalPrice"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/originalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="originalPrice"
            android:textSize="9dp"
            android:layout_toRightOf="@+id/product"
            android:layout_above="@+id/pp"/>

        <LinearLayout
            android:id="@+id/pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/product"
            android:layout_alignBottom="@+id/product"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/salePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salePrice"
                android:layout_gravity="bottom"
                android:textColor="#FF1212"
                android:textSize="20dp"/>

            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/saleRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="saleRate"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>