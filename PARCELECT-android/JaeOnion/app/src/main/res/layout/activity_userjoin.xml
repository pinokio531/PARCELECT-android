<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/newUserPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/actionbarColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_centerInParent="true"
        android:background="@color/subBackground"
        android:layout_below="@+id/newUserPage"
        android:layout_above="@+id/joinComplete">

        <TextView
            android:id="@+id/putInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보입력"
            android:textSize="19sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/putID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putInformation">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="ID"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>


            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/menu_background"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/putPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putID"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="PW"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:inputType="textPassword"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLines="1"
                android:background="@drawable/menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/putPW2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putPW"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="PW 확인"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/colorAccent"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/putName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putPW2"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="이름"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/putPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putName"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="핸드폰번호"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLines="1"
                android:maxLength="3"
                android:inputType="number"
                android:background="@drawable/menu_background"/>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="@color/backgroundColor"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></View>

            <EditText
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLines="1"
                android:maxLength="4"
                android:inputType="number"
                android:background="@drawable/menu_background"/>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:background="@color/backgroundColor"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></View>

            <EditText
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLength="4"
                android:maxLines="1"
                android:inputType="number"
                android:background="@drawable/menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/putAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putPhone"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="우편번호"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/putAdress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putAdress"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="주소"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/putAdress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/putAdress2"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="상세주소"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/menu_background"/>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/joinComplete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/actionbarColor"
        android:layout_alignParentBottom="true"
        android:foreground="?android:selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="회원가입 완료"
            android:textSize="28dp"
            android:gravity="center" />
    </FrameLayout>

</RelativeLayout>